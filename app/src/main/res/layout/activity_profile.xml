<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.dan.tute.ProfileActivity"
                android:background="@color/ColorPrimary">

    <ImageView
        android:id="@+id/viewProfileImage"
        android:src = "@drawable/defaultsmallpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:maxHeight="100dip"
        android:maxWidth="250dip"
        android:minHeight="100dip"
        android:minWidth="250dip"
        android:resizeMode="horizontal|vertical"
        android:contentDescription="@string/default_profile_image"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <!-- Name Tag -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="Dan Kinneer"
        android:id="@+id/profNameTag"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/viewProfileImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="kinneerd@appstate.edu"
        android:id="@+id/profEmailAddress"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/white"
        android:layout_below="@+id/ratingBar"
        android:layout_alignStart="@+id/viewProfileImage"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email:"
        android:textColor="@android:color/white"
        android:id="@+id/emailLabel"
        android:layout_below="@id/ratingBar"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Computer Science"
        android:id="@+id/profMajor"
        android:textColor="@android:color/white"
        android:layout_below="@+id/profEmailAddress"
        android:layout_alignStart="@+id/viewProfileImage"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Major:"
        android:textColor="@android:color/white"
        android:id="@+id/majorLabel"
        android:layout_below="@+id/emailLabel"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="$3.50"
        android:id="@+id/profPrice"
        android:textColor="@android:color/white"
        android:layout_below="@+id/profMajor"
        android:layout_alignStart="@+id/viewProfileImage"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Price:"
        android:textColor="@android:color/white"
        android:id="@+id/priceLabel"
        android:layout_below="@+id/majorLabel"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/profNameTag"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendEmailIcon"
        android:src="@drawable/ic_action"
        android:background="@color/ColorPrimary"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@+id/viewProfileImage"
        android:layout_toEndOf="@+id/viewProfileImage"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="This is where a short discription will be located"
        android:textColor="@android:color/white"
        android:id="@+id/profDesc"
        android:layout_below="@+id/priceLabel"
        android:gravity="center"
        android:layout_marginTop="30dp"/>


</RelativeLayout>
